FROM node:22.12.0-alpine

# Install dependencies including su-exec for user switching
RUN apk add --no-cache libc6-compat su-exec

WORKDIR /app

# Enable corepack (built into Node.js 16+) which handles pnpm automatically
# This reads the packageManager field from package.json
RUN corepack enable

# Install pnpm globally as fallback (in case corepack doesn't work in entrypoint)
# Use --force to overwrite corepack's symlink if it exists
RUN npm install -g pnpm@10.12.1 --force

# Copy package files
COPY package.json pnpm-lock.yaml ./

# Install dependencies (using globally installed pnpm)
RUN pnpm install --frozen-lockfile

# Copy entrypoint script
COPY docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

# Create .next directory with proper permissions for node user
RUN mkdir -p /app/.next && chown -R node:node /app/.next

# Expose port
EXPOSE 3000

# Set environment variables
ENV NODE_ENV=development
ENV PORT=3000
ENV HOST=0.0.0.0
ENV HOSTNAME=0.0.0.0

# Set entrypoint
ENTRYPOINT ["docker-entrypoint.sh"]

# Default command (will be overridden in docker-compose)
CMD ["pnpm", "dev"]

